<SelectBox @classNamePrefix="test-select-box" @onSelect={{this.handleSelection}} as |sb|>
  <sb.SelectedOption {{on "click" sb.toggle}}></sb.SelectedOption>
  {{#if sb.isOpen}}
    <sb.Options>
      {{#each @options as |option|}}
        <sb.Option @value={{option}}>{{yield option}}</sb.Option>
      {{/each}}
    </sb.Options>
  {{/if}}
</SelectBox>